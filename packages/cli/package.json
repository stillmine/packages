{
  "name": "@stillmine/cli",
  "version": "0.0.2",
  "description": "Command line interface.",
  "repository": {
    "type": "git",
    "url": "https://github.com/stillmine/packages.git"
  },
  "license": "MIT",
  "main": "lib/mod.js",
  "types": "lib/mod.d.ts",
  "bin": {
    "stillmine": "./cli.js"
  },
  "scripts": {
    "build": "concurrently \"rimraf lib\" \"ts-node-script -T scripts/build.ts\" \"tsc --emitDeclarationOnly\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "prepack": "yarn build",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "clipanion": "3.0.0-rc.12",
    "esbuild": "0.11.21"
  },
  "devDependencies": {
    "@types/node": "15.3.0",
    "concurrently": "6.0.2",
    "eslint": "7.25.0",
    "jest": "26.6.3",
    "rimraf": "3.0.2",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  }
}
