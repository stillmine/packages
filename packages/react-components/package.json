{
  "name": "@stillmine/react-components",
  "version": "0.1.0",
  "description": "React components.",
  "keywords": [
    "ui",
    "react",
    "components"
  ],
  "homepage": "https://stillmine-component-docs.netlify.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/stillmine/packages.git"
  },
  "license": "MIT",
  "main": "lib/mod.js",
  "module": "esm/mod.js",
  "types": "lib/mod.d.ts",
  "scripts": {
    "prebuild": "rimraf esm lib",
    "build": "yarn build:module && yarn build:types",
    "build:module": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "build:storybook": "build-storybook -o dist",
    "develop:storybook": "start-storybook -p 6006",
    "lint": "eslint src/**",
    "lint:format": "prettier \"src/**/*.{ts|tsx}\" --list-different",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@emotion/react": ">= 11",
    "@emotion/styled": ">= 11",
    "react": ">= 17"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  }
}
